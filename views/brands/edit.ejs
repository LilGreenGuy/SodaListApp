<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Brand</h1>
    <div class="col-6 offset-3">
        <form action="/brands/<%=brand._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="company">Parent Company</label>
                <select class="form-control" required type="text" id="company" name="brand[company]" required
                 value="<%=brand.company %>">
                 <option value="">Select a Parent Company:</option>
                 <% for(let company of companies) {%>
                    <option value="<%=company._id %>" <%=brand.company === company._id ? 'selected' : ''  %>><%=company.name %></option>
                    <% } %>
                </select>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please submit a name</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" required type="text" id="name" name="brand[name]" required
                 value="<%=brand.name %>">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please submit a name</div>
            </div>
            <div class="input-group mb-3">
                <input type="file" class="form-control" id="image" name="image">
                <label class="input-group-text" for="image">Upload Logo</label>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Save Changes</button>
            </div>
            <a href="/brands/<%=brand._id %>" class="btn btn-primary">Go Back</a>
        </form>
    </div>
</div>